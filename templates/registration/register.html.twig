{% extends 'lorebase.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    {{ form_start(registrationForm) }}
    <section class="vh-100" style="background-color: #eee;">
        <div class="container py-5 h-100">
            <div class="row d-flex justify-content-center align-items-center h-100">
                <div class="col col-xl-10">
                    <div class="card" style="border-radius: 1rem;">
                        <div class="row g-0">
                            <div class="col-md-6 col-lg-5 d-none d-md-block">
                                <img src="{{ asset('upload/lore/coiudau.jpg') }}"
                                     alt="login form" class="img-fluid" style="border-radius: 1rem 0 0 1rem;" />
                            </div>
                            <div class="col-md-6 col-lg-7 d-flex align-items-center">
                                <div class="card-body p-4 p-lg-5 text-black">

                                        <div class="d-flex align-items-center mb-3 pb-1">
                                            <i class="fas fa-cubes fa-2x me-3" style="color: #eee;"></i>
                                            <span class="h1 fw-bold mb-0">Register</span>
                                        </div>

                                        <h5 class="fw-normal mb-3 pb-3" style="letter-spacing: 1px;">Register if you don't have an account</h5>

                                        <div class="form-outline mb-4">
                                            <div class="form-group">
                                                {{ form_row(registrationForm.email, {'attr': {'class': 'form-control form-control-lg'}}) }}
                                            </div>
                                        </div>

                                        <div class="form-outline mb-4">
                                            <div class="form-group">
                                                {{ form_row(registrationForm.plainPassword, {'attr': {'class': 'form-control form-control-lg'}}) }}
                                            </div>
                                        </div>

                                        <div class="form-outline mb-4">
                                            <div class="form-outline">
                                                {{ form_row(registrationForm.agreeTerms) }}
                                            </div>
                                        </div>

                                        <div class="pt-1 mb-4">
                                            <a class="btn btn-outline-dark btn-lg btn-block" type="button" href="{{ path('app_login') }}">Login</a>
                                            <button class="btn btn-outline-dark btn-lg btn-block" type="submit">Sign-up</button>
                                        </div>

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    {{ form_end(registrationForm) }}


{% endblock %}
