{% extends 'adminbase.html.twig' %}

{% block title %}User manager{% endblock %}

{% block body %}
    <div class="container">
        <h2 class="text-center mt-5 mb-3">User manager</h2>
        <div class="card" style="border-radius: 2em ; border: 1px solid #212529;  background-color: black; padding: 5px" >
            <div style="padding: 5px">
                <a class="btn btn-outline-light float-right" href="{{ path('app_adminacc_new') }}" style="border-radius: 2em; padding: 10px">
                    Create New User
                </a>
            </div>
            <div class="card" style="border-radius: 2em" >
            <div class="card-body">
                <table class="table">
                    <tr>
                        <th>Email</th>
                        <th>Password</th>
                        <th ></th>
                    </tr>
                    {% for user in users %}
                        <tr>
                            <td>{{ user.email }}</td>
                            <td>{{ user.password }}</td>
                            <td align="center">
                                <form method="post" action="{{ path('app_adminacc_delete', {'id': user.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">

                                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ user.id) }}">
                                    <button class="btn btn-outline-dark" ><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash3-fill" viewBox="0 0 16 16">
                                            <path d="M11 1.5v1h3.5a.5.5 0 0 1 0 1h-.538l-.853 10.66A2 2 0 0 1 11.115 16h-6.23a2 2 0 0 1-1.994-1.84L2.038 3.5H1.5a.5.5 0 0 1 0-1H5v-1A1.5 1.5 0 0 1 6.5 0h3A1.5 1.5 0 0 1 11 1.5Zm-5 0v1h4v-1a.5.5 0 0 0-.5-.5h-3a.5.5 0 0 0-.5.5ZM4.5 5.029l.5 8.5a.5.5 0 1 0 .998-.06l-.5-8.5a.5.5 0 1 0-.998.06Zm6.53-.528a.5.5 0 0 0-.528.47l-.5 8.5a.5.5 0 0 0 .998.058l.5-8.5a.5.5 0 0 0-.47-.528ZM8 4.5a.5.5 0 0 0-.5.5v8.5a.5.5 0 0 0 1 0V5a.5.5 0 0 0-.5-.5Z"/>
                                        </svg></button>
                                </form>
                            </td>
                        </tr>
                    {% endfor %}
                </table>
            </div>
            </div>
        </div>
    </div>

{% endblock %}
