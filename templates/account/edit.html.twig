{% extends 'base.html.twig' %}

{% block title %}Edit Profile{% endblock %}

{% block body %}
    <div class="container">
        <h2 class="text-center mt-5 mb-3 w3-bar w3-white w3-wide w3-padding">Edit Profile</h2>
        <div class="card" style="border-radius: 2em ; border: 1px solid #212529;  background-color: black; padding: 5px">
            <div style="padding: 5px">
                <a class="btn btn-outline-light float-right" href="{{ path('app_account_index') }}" style="border-radius: 2em; ">
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-arrow-left" viewBox="0 0 16 16">
                        <path fill-rule="evenodd" d="M15 8a.5.5 0 0 0-.5-.5H2.707l3.147-3.146a.5.5 0 1 0-.708-.708l-4 4a.5.5 0 0 0 0 .708l4 4a.5.5 0 0 0 .708-.708L2.707 8.5H14.5A.5.5 0 0 0 15 8z"/>
                    </svg>
                </a>
            </div>
            <div class="card" style="border-radius: 2em" >
            <div class="card-body">
                {% include 'account/_form.html.twig' with {'button_label': 'Update Account', 'button_color': 'btn-outline-dark'}  %}
            </div>
            </div>
        </div>
    </div>
{% endblock %}